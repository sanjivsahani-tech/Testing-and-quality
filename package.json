{
  "name": "user-management-api",
  "version": "1.0.0",
  "description": "Beginner-friendly Node.js User Management API with Jest and Supertest tests.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --coverage --json --outputFile=coverage/jest-report.json && node scripts/generateTestReport.js"
  },
  "keywords": [
    "node",
    "express",
    "jest",
    "supertest",
    "mvc"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.18.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "clover",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js",
      "app.js"
    ]
  }
}
